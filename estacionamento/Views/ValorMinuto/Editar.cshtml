@model estacionamento.Models.ValorCobrado
@{
    ViewData["Title"] = "Editar Valor do Minuto";
}

<
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        <form asp-action="Alterar" asp-route-id="@Model.Id" asp-controller="ValorMinuto" method="post" class="shadow p-4 rounded bg-light">
        

            <div class="mb-3">
                <label asp-for="Minuto" class="form-label">Minuto</label>
                <input asp-for="Minuto" value="@Model.Minuto" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Minuto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Valor" class="form-label">Valor (R$)</label>
                <input asp-for="Valor" value="@Model.Valor" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>